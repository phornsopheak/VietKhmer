<% provide :title, @word.wordText %>
<div class="row">
  <div class="col s8">
    <div class="row">
      <div class="col s10">
        <div class="blue-text text-darken-2 word-title">
          <%= @word.wordText %>
        </div>
      </div>
      <div class="col s2">
        <i class="material-icons">star</i>
        <i class="material-icons">library_books</i>
      </div>
    </div>
    <%= render @word.meanings %>
  </div>
  <div class="col s4">
    <div class="card-panel cyan lighten-5">
      Top 30 words
      <%= render partial: "shared/popular_word", collection: @popular_words  %>
    </div>
  </div>
</div>